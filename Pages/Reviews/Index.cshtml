@page
@model RestaurantReviews.Pages.Reviews.ReviewsIndexModel

<h1>Lista Review-uri</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Adaugă Review</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Restaurant</th>
            <th>Rating</th>
            <th>Comentariu</th>
            <th>Data</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reviews)
        {
            <tr>
                <td>@item.Restaurant?.Name</td>
                <td>@item.Rating</td>
                <td>@item.Comment</td>
                <td>@item.DatePosted.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Detalii</a>
                    <a asp-page="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>
