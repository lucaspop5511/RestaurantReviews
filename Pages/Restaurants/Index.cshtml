@page
@model RestaurantReviews.Pages.Restaurants.IndexModel

<h1>Lista Restaurante</h1>

<p>
    <a asp-page="Create">Adaugă Restaurant</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nume</th>
            <th>Adresă</th>
            <th>Oraș</th>
            <th>Tip Bucătărie</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Restaurants)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.CuisineType</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Detalii</a>
                    <a asp-page="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>
